extends layout
block content

    
    style.
      body{
      background-image: url("/images/orange1.jpg");
      background-position: center;
      background-repeat: no-repeat;
      background-size: cover;
      }
      
      #signInLabel{
      text-align: center;
      color: green;
      font-size : 25px
      
      }
      div.transbox{
      border-radius: 4px;
      background-color: honeydew ;
      padding: 20px;
      max-width: 400px;
      margin: 0 auto;
      opacity: 0.9;
      float:right;
      
      }
      //- #footer{
      //- width:100%;
      //- height:10%;
      //- position:absolute;
      //- bottom:0;
      //- left:0;
      //- background-color: #45a049;
      //- }
      input[type=text], select {
      width: 100%;
      padding: 10px 20px;
      margin: 6px 0;
      display: inline-block;
      border: 1px solid #ccc;
      border-radius: 2px;
      box-sizing: border-box;
      color: black ;
      }
      input[type=password], select {
      width: 100%;
      padding: 12px 20px;
      margin: 8px 0;
      display: inline-block;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-sizing: border-box;
      }
      input[type=submit] {
      width: 100%;
      color: black;
      padding: 14px 20px;
      margin: 8px 0;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      background-color: #45a049; 
      }
      input[type=submit]:hover {
      background-color:rgb(100, 100, 204);
      }
      

   
      #logoArea{
        width:7%;
        margin:5px;
      }
      #titleArea{
        width:50%;
        color:green;
        text-align:left;
        font-size:25px;
        font-family:Garamond;
        font-weight:bold;
        
      }
      .card{
       background-color: orange;
        color: green;
        padding: 16px 20px;
        border: none;
        cursor: pointer;
        opacity: 1;
        position: fixed;
        top: 55%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 200px;
        font-size:25px;
      }
      #pic{
        float:left;
      }
      
     
    
